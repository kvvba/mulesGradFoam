FoamFile
{
	version     2.0;
	format      ascii;
	class       dictionary;
	location    "system";
	object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
	default         Euler;
}

gradSchemes
{
	// default         fourth;
	default Gauss linear;
	// default pointCellsLeastSquares;
}

divSchemes
{
	default Gauss linear;
	div(rhoPhi,U)  Gauss limitedLinearV 1;
	div(phi,alpha)  Gauss vanLeer;
	div(phirb,alpha)  Gauss interfaceCompression;
	div(rhoPhiCpL,TL)       Gauss SuperBee 1.0 phi;
	div(rhoPhiCpV,TV)       Gauss SuperBee 1.0 phi;
	div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
	default         Gauss linear orthogonal;
}


interpolationSchemes
{
	default         linear;
}

snGradSchemes
{
	default         orthogonal;
}


