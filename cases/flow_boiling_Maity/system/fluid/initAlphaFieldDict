FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system/fluid";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

field "alpha.water";

theta 28.0;
rbub 0.125e-3;
thetaR #eval{degToRad($theta)};
height #eval{$rbub * cos($thetaR)};

type sphere;
origin (0 $height 0);
radius $rbub;
scale -1;


// ************************************************************************* //
